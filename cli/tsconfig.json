{
  "extends": ["@tsconfig/strictest", "@tsconfig/node22", "@tsconfig/node-ts"],
  "compilerOptions": {

    "target": "es2024",
    "lib": ["es2024"],
    "types": ["node"],

    "declaration": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noUncheckedSideEffectImports": true,

    "checkJs": false,
    "allowJs": false,
    "isolatedDeclarations": true,
    "noEmit": true
  },
  "include": ["tsdown.config.ts", "src"]
}
