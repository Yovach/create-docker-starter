{
  "extends": ["@tsconfig/strictest", "@tsconfig/node20", "@tsconfig/node-ts"],
  "compilerOptions": {
    "module": "node20",

    "target": "es2020",
    "lib": ["es2020"],
    "types": ["node"],

    "declaration": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "noUncheckedSideEffectImports": true,

    "checkJs": false,
    "allowJs": false,
    "isolatedDeclarations": true,
    "noEmit": true
  },
  "include": ["tsdown.config.ts", "eslint.config.ts", "src/**/*.ts"]
}
